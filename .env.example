# Betley Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Blockchain network settings
NEXT_PUBLIC_CHAIN_ID=998
NEXT_PUBLIC_RPC_URL=https://rpc.hyperliquid-testnet.xyz/evm
NEXT_PUBLIC_EXPLORER_URL=https://explorer.hyperliquid-testnet.xyz
NEXT_PUBLIC_NETWORK_NAME=HyperEVM Testnet
NEXT_PUBLIC_IS_TESTNET=true

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================

# Main Betley contract address (REQUIRED)
NEXT_PUBLIC_BETLEY_ADDRESS=0xCFf7b01Fe9838a913C2Bc06499C3CBEA169D1725

# HYPE token contract address (REQUIRED)
NEXT_PUBLIC_HYPE_TOKEN_ADDRESS=0xE9E98a2e2Bc480E2805Ebea6b6CDafAd41b7257C

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# App metadata
NEXT_PUBLIC_APP_NAME=Betley
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized betting platform
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# WALLETCONNECT CONFIGURATION
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=a7b53d050fbc92b0e503d20e293d6ff5

# =============================================================================
# TIMING CONFIGURATION (in milliseconds)
# =============================================================================

# How long to wait for token approval transactions
# Recommended: 8000 for testnet, 3000-5000 for mainnet
NEXT_PUBLIC_APPROVAL_TIMEOUT=8000

# React Query cache timing
NEXT_PUBLIC_QUERY_STALE_TIME=30000
NEXT_PUBLIC_QUERY_REFETCH_INTERVAL=8000
NEXT_PUBLIC_MUTATION_RETRY=3

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================

# Enable React Query DevTools (auto-enabled in development)
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Enable console logging for debugging (auto-enabled in development)
NEXT_PUBLIC_ENABLE_CONSOLE_LOGGING=true

# =============================================================================
# DEPLOYMENT PRIVATE KEYS (DO NOT COMMIT TO GIT)
# =============================================================================

# Private key for contract deployment (only needed for deployment)
# PRIVATE_KEY=your_private_key_here

# =============================================================================
# PRODUCTION EXAMPLES
# =============================================================================

# Example production configuration (comment out for local development):
# NEXT_PUBLIC_CHAIN_ID=1
# NEXT_PUBLIC_RPC_URL=https://your-production-rpc.com
# NEXT_PUBLIC_IS_TESTNET=false
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NEXT_PUBLIC_APPROVAL_TIMEOUT=5000

# =============================================================================
# QUICK SETUP GUIDE
# =============================================================================

# 1. Copy this file: cp .env.example .env.local
# 2. Update contract addresses after deployment
# 3. Get WalletConnect Project ID from https://cloud.walletconnect.com
# 4. For production: update RPC URL, chain ID, and app URL
# 5. Adjust timeouts based on network speed

# =============================================================================
# ENVIRONMENT VARIABLE RULES
# =============================================================================

# - All public variables must start with NEXT_PUBLIC_
# - Private keys should never be committed to git
# - Use .env.local for local development
# - Use deployment platform env vars for production
# - Always validate addresses start with 0x and are 42 characters